<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kelola Bunga | Toko Bunga</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f7f7f7;
            color: #333;
        }
        .back-button {
            position: absolute;
            top: 20px;
            left: 20px;
            background-color: #FFB6C1; /* Pastel Pink */
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 1em;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }
        .back-button:hover {
            background-color: #ff94a8; /* Warna lebih gelap saat hover */
            transform: translateY(-2px);
        }
        h1 {
            text-align: center;
            color: #FFB6C1; /* Pastel Pink */
            margin-top: 50px;
            font-size: 2.5em;
        }
        form {
            max-width: 600px;
            margin: 30px auto;
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        input, textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 1em;
            background-color: #f0f0f0;
        }
        input:focus, textarea:focus {
            outline: none;
            border-color: #FFB6C1;
        }
        button {
            width: 100%;
            background-color: #81C784; /* Pastel Green */
            border: none;
            color: white;
            padding: 12px;
            font-size: 1.2em;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }
        button:hover {
            background-color: #66BB6A;
            transform: translateY(-3px);
        }
        h2 {
            text-align: center;
            color: #81C784; /* Pastel Green */
            margin-top: 40px;
            font-size: 2em;
        }
        table {
            width: 100%;
            margin: 30px auto;
            border-collapse: collapse;
            background-color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        th, td {
            padding: 15px;
            text-align: center;
            border: 1px solid #ddd;
        }
        th {
            background-color: #FFB6C1; /* Pastel Pink */
            color: white;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        img {
            width: 100px;
        }
        a {
            color: #FF4081; /* Pastel Pink */
            text-decoration: none;
            font-weight: bold;
        }
        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <!-- Tombol Back -->
    <a href="/admin/dashboard" class="back-button">Back</a>

    <h1>Kelola Bunga</h1>
    <form action="/admin/bunga" method="POST" enctype="multipart/form-data">
        <input type="text" name="nama_bunga" placeholder="Nama Bunga" required>
        <textarea name="deskripsi" placeholder="Deskripsi" required></textarea>
        <input type="number" name="harga" placeholder="Harga" required>
        <input type="number" name="stok" placeholder="Stok" required>
        <input type="file" name="gambar" required>
        <button type="submit">Tambah Bunga</button>
    </form>

    <h2>Daftar Bunga</h2>
    <table>
        <thead>
            <tr>
                <th>Nama</th>
                <th>Deskripsi</th>
                <th>Harga</th>
                <th>Stok</th>
                <th>Gambar</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody>
            <% bunga.forEach((item) => { %>
                <tr>
                    <td><%= item.nama_bunga %></td>
                    <td><%= item.deskripsi %></td>
                    <td>Rp<%= item.harga %></td>
                    <td><%= item.stok %></td>
                    <td><img src="<%= item.gambar %>" alt="<%= item.nama_bunga %>"></td>
                    <td>
                        <form action="/admin/bunga/update/<%= item.kd_bunga %>" method="POST">
                            <input type="text" name="nama_bunga" value="<%= item.nama_bunga %>">
                            <textarea name="deskripsi"><%= item.deskripsi %></textarea>
                            <input type="number" name="harga" value="<%= item.harga %>">
                            <input type="number" name="stok" value="<%= item.stok %>">
                            <button type="submit">Update</button>
                        </form>
                        <a href="/admin/bunga/delete/<%= item.kd_bunga %>">Hapus</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>